    </keywordlist>
    
    <!-- Comments -->
    <pattern style="comment">//.*?$</pattern>
    <string style="comment">
        <starts>/\*</starts>
        <ends>\*/</ends>
    </string>
    
    <!-- string -->
    <string style="string" escape="\">
        <starts>"</starts>
        <ends>"</ends>
    </string>
    
    <pattern style="preprocessor">^[ \t]*#.*$</pattern>
</syntax>
