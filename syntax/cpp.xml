        <keyword>delete</keyword>
        <keyword>do</keyword>
        <keyword>dynamic_cast</keyword>
        <keyword>else</keyword>
        <keyword>for</keyword>
        <keyword>fortran</keyword>
        <keyword>friend</keyword>
        <keyword>goto</keyword>
        <keyword>if</keyword>
        <keyword>new</keyword>
        <keyword>not</keyword>
